<section class="download" id="variables">
  <div class="page-header">
    <a class="pull-right toggle-all" href="#">Voltar aos padrões</a>
    <h1>
      2. Modificar variáveis
      <small>Customize variáveis CSS sem compilar pelo LESS</small>
    </h1>
  </div>
  <div class="row download-builder">
    <div class="span4">
      <h3>Links</h3>
      <label>@linkColor</label>
      <input type="text" class="span3" name="@linkColor" value="#08c">
      <label>@linkColorHover</label>
      <input type="text" class="span3" name="@linkColorHover" value="darken(@linkColor, 15%)">
      <h3>Grid</h3>

      <label>@gridColumns</label>
      <input type="text" class="span3" name="@gridColumns" value="12">
      <label>@gridColumnWidth</label>
      <input type="text" class="span3" name="@gridColumnWidth" value="60px">
      <label>@gridGutterWidth</label>
      <input type="text" class="span3" name="@gridGutterWidth" value="20px">
      <label>@siteWidth</label>
      <input type="text" class="span3" name="@siteWidth" value="(@gridColumns * @gridColumnWidth) + (@gridGutterWidth * (@gridColumns - 1))">
      <label>@fluidSidebarWidth</label>
      <input type="text" class="span3" name="@fluidSidebarWidth" value="220px">
    </div><!-- /span -->
    <div class="span4">
      <h3>Tipografia</h3>
      <label>@baseFontSize</label>
      <input type="text" class="span3" name="@baseFontSize" value="13px">
      <label>@baseFontFamily</label>
      <input type="text" class="span3" name="@baseFontFamily" value="'Helvetica Neue', Helvetica, Arial, sans-serif">
      <label>@baseLineHeight</label>
      <input type="text" class="span3" name="@baseLineHeight" value="18px">
      <h3>Formulários</h3>
      <label>@primaryButtonColor</label>
      <input type="text" class="span3" name="@primaryButtonColor" value="@blue">
      <label>@placeholderText</label>
      <input type="text" class="span3" name="@placeholderText" value="@grayLight">
      <h3>Barra de navegação</h3>
      <label>@navbarHeight</label>
      <input type="text" class="span3" name="@navbarHeight" value="40px">
      <label>@navbarBackground</label>
      <input type="text" class="span3" name="@navbarBackground" value="@grayDarker">
      <label>@navbarBackgroundHighlight</label>
      <input type="text" class="span3" name="@navbarBackgroundHighlight" value="@grayDark">
    </div><!-- /span -->
    <div class="span4">
      <h3>Estados do formulário e alertas</h3>
      <label>@warningText</label>
      <input type="text" class="span3" name="@warningText" value="#c09853">
      <label>@warningBackground</label>
      <input type="text" class="span3" name="@warningBackground" value="#fcf8e3">
      <label>@warningBorder</label>
      <input type="text" class="span3" name="@warningBorder" value="#f3edd2">
      <label>@errorText</label>
      <input type="text" class="span3" name="@errorText" value="#b94a48">
      <label>@errorBackground</label>
      <input type="text" class="span3" name="@errorBackground" value="#f2dede">
      <label>@errorBorder</label>
      <input type="text" class="span3" name="@errorBorder" value="#e9c7c7">
      <label>@successText</label>
      <input type="text" class="span3" name="@successText" value="#468847">
      <label>@successBackground</label>
      <input type="text" class="span3" name="@successBackground" value="#dff0d8">
      <label>@successBorder</label>
      <input type="text" class="span3" name="@successBorder" value="#cfe8c4">
      <label>@infoText</label>
      <input type="text" class="span3" name="@infoText" value="#3a87ad">
      <label>@infoBackground</label>
      <input type="text" class="span3" name="@infoBackground" value="#d9edf7">
      <label>@infoBorder</label>
      <input type="text" class="span3" name="@infoBorder" value="#bfe1f2">
    </div><!-- /span -->
  </div><!-- /row -->
</section>

